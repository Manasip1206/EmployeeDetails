<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter employee name"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/nameLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/designationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation"
        android:textColor="@color/black"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/designationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter designation"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/designationLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/salaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:textColor="@color/black"
        android:layout_below="@id/designationEditText"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/salaryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter salary"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        android:layout_below="@id/salaryLabel"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/addEmployeeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:textColor="@color/black"
        android:backgroundTint="@color/skyblue"
        android:layout_below="@id/salaryEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
